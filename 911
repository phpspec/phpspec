<?php

include("../../../bd.php");

if ($_POST) {

    //Recibimos valores del formulario
    $clasificacion = (isset($_POST["clasificacion"])) ? $_POST["clasificacion"] : "";
    $id_clasificacion = (isset($_POST["id_clasificacion"])) ? $_POST["id_clasificacion"] : "";

    $sentencia = $conexion->prepare("INSERT INTO `tbl_clasificacion_especifica` 
    (`id`, `clasificacion`, `id_clasificacion`) 
    VALUES (NULL, :clasificacion, :id_clasificacion);");

    $sentencia->bindParam(":clasificacion", $clasificacion);
    $sentencia->bindParam(":id_clasificacion", $id_clasificacion);

    $sentencia->execute();

    $mensaje = "Registro agregado con éxito.";
    header("Location:index.php?mensaje=" . $mensaje);
}

